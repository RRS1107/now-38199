<%= render partial: "packages/package" %>
  <body class="text-center">
    <main class="form-signup w-100 m-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <h1 class="h3 mb-3 fw-normal">NOW</h1>

        <div class="form-floating">
          <%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder:"名前" %>
        </div>

        <div class="form-floating">
          <%= f.text_field :staff_code, autofocus: true, autocomplete: "staff_code",placeholder:"社員CD" %>
        </div>

        <div class="form-floating">
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password",placeholder:"パスワード" %>
        </div>

        <div class="form-floating">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"パスワード(確認)" %>
        </div>

        <div class="actions">
          <%= f.submit "登録",class:"btn btn-secondary" %>
        </div>
      <% end %>

<%= render "devise/shared/links" %>
