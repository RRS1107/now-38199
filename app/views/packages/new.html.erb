<%= render partial: "package" %>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<div class="container">
  <div class="form-group form-inline input-group-sm">
    <%= form_with(model: @package, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: @package %>
        <table class="table">
          <thead>
            <tr>
              <th>配達希望日</th>
              <th>送り状NO</th>
              <th>配達希望時間</th>
              <th>お届け先</th>
              <th>集荷地域</th>
              <th>個口数</th>
            </tr>
            <br/>
          </thead>
          <tbody>  
            <td><%= f.date_field :delivery_date, class: 'date-select' %></td>
            <td><%= f.text_field :invoice_number, placeholder: "例:123412341234"%></td>
            <td><%= f.collection_select(:preferred_time_id, PreferredTime.all, :id, :name, {},) %></td>
            <td><%= f.collection_select(:delivery_area_id, Prefecture.all, :id, :name, {},) %></td>
            <td><%= f.collection_select(:collection_area_id, Prefecture.all, :id, :name, {},) %></td>
            <td><%= f.text_field :unit, placeholder: "例:1" %></td>
          </tbody>
        </table>    
            <p align="center"><%= f.submit "登録する",class:"btn btn-secondary" %>
            <%= link_to "もどる", root_path, class:"btn btn-secondary" %>
    <% end %>
  </div>
</div>

  
